<main>
	<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
	<div class="book-box">
		<table>
			<thead>
				<tr>
					<th>Title:</th>
					<td><%= @book.title %></td>
				</tr>
				<tr>
					<th>Body:</th>
					<td><%= @book.body %></td>
				</tr>
			</thead>
		</table>
	</div>
	<%= link_to "Edit", edit_book_path(@book) %> | <%= link_to "Back" ,books_path %>
</main>