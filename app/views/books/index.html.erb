<main>
	<h1 class="book-headline">Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show",book_path(book) %></td>
					<td><%= link_to "Edit",edit_book_path(book) %></td>
					<td><%= link_to "Destroy",book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</main>





<h1>New book</h1>

<!-- @booK = form_for内のf.object -->


<%= render 'layouts/error_messages', model: @book %>
<%= form_for(@book) do |f| %>
	<div>
		<%= f.label :title, for: :book_title %><br>
		<%= f.text_field :title %>
	</div>
	<div>
		<h4>Body</h4>
		<%= f.text_area :body %>
	</div>
	<div>
		<%= f.submit 'Create Book' %>
	</div>

<% end %>